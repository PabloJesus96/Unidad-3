<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_department"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_deparment"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="@dimen/dimen_width"
            android:layout_height="wrap_content"
            android:id="@+id/tv_department_name"
            android:layout_toRightOf="@id/iv_deparment"
            android:text="@string/department_name"
            android:textSize="@dimen/dimen_textSize"/>

        <ImageButton
            android:layout_width="@dimen/dimen_imageView"
            android:layout_height="@dimen/dimen_imageView"
            android:id="@+id/bt_edit_department"
            android:layout_toRightOf="@+id/tv_department_name"
            android:src="@android:drawable/ic_menu_edit"/>

        <TextView
            android:layout_width="@dimen/dimen_text_phone"
            android:layout_height="wrap_content"
            android:id="@+id/tv_department_phone"
            android:layout_toRightOf="@id/iv_deparment"
            android:text="Department Phone"
            android:textSize="@dimen/dimen_phone"
            android:layout_below="@+id/tv_department_name"/>


        <ImageButton
            android:layout_width="@dimen/dimen_imageView"
            android:layout_height="@dimen/dimen_imageView"
            android:id="@+id/bt_delete_department"
            android:layout_toRightOf="@+id/tv_department_phone"
            android:layout_below="@id/bt_edit_department"
            android:src="@android:drawable/ic_menu_delete"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>