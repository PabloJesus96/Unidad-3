<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_product">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv_product"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_product_name"
            android:layout_toRightOf="@id/iv_product"
            android:text="product name"
            android:textSize="13pt"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/bt_edit_product"
            android:layout_toRightOf="@+id/tv_product_name"
            android:src="@android:drawable/ic_menu_edit"/>



        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_product_price"
            android:layout_toRightOf="@id/iv_product"
            android:text="product price"
            android:textSize="10pt"
            android:layout_below="@+id/tv_product_name"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_product_stock"
            android:text="product stock"
            android:textSize="10pt"
            android:layout_below="@+id/tv_product_name"
            android:layout_toRightOf="@+id/tv_product_price"
            android:layout_toLeftOf="@+id/bt_edit_product"
            android:layout_toStartOf="@+id/bt_edit_product"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/bt_delete_product"
            android:layout_toRightOf="@+id/tv_product_stock"
            android:layout_below="@id/bt_edit_product"
            android:src="@android:drawable/ic_menu_delete"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>